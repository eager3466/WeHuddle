<form catchsubmit="formSubmit" catchreset="formReset">
	<view class="cu-form-group margin-top">
		<view class="title">活动名称</view>
		<input name="title" placeholder="名称名称呀"></input>
	</view>
	<view class="cu-form-group margin-top">
		<view class="title">举办方</view>
		<input name="organizers" placeholder="你是哪拨人"></input>
	</view>
	<view class="cu-form-group">
		<view class="title">开始日期</view>
		<picker name="start_date" mode="date" value="{{date}}" start="2021-09-10" end="2121-09-10" bindchange="DateChange">
			<view class="picker">
				{{date}}
			</view>
		</picker>
	</view>
		</view>
		<view class="cu-form-group">
		<view class="title">结束日期</view>
		<picker name="end_date" mode="date" value="{{date}}" start="2021-09-10" end="2120-09-10" bindchange="DateChange">
			<view class="picker">
				{{date}}
			</view>
		</picker>
	</view>

	<view class="cu-form-group">
		<view class="title">报名上限</view>
		<input placeholder="最大人数" name="max_people"></input>
	</view>
	<view class="cu-form-group">
		<view class="title">官网链接</view>
		<input placeholder="the link" name="website"></input>
	</view>
	<view class="cu-form-group">
		<view class="title">比赛地点</view>
		<input placeholder="where" name="position"></input>
	</view>
	<view class="cu-form-group margin-top">
		<textarea name="description" maxlength="-1" disabled="{{modalName!=null}}" bindinput="textareaAInput" placeholder="活动简介"></textarea>
	</view>
	<view class="cu-form-group">
		<view class="title">是否为个人赛</view>
		<view class="action">
		<radio-group name="individual" bindchange="SetBorderSize" >
		<label class="margin-left-sm">
			<radio class="blue sm radio" value="false" checked></radio>
			<text> 否</text>
		</label>
		<label class="margin-left-sm">
			<radio class="blue sm radio" value="true"></radio>
			<text> 是</text>
		</label>
		</radio-group>
		</view>
	</view>	
	</view>
	
<view class="cu-bar bg-white margin-top">
		<view class="action">
			图片上传
		</view>
		<view class="action">
			{{imgList.length}}/4
		</view>
	</view>
	
	<view class="cu-form-group">
		<view class="grid col-4 grid-square flex-sub">
			<view class="bg-img" wx:for="{{imgList}}" wx:key="{{index}}" bindtap="ViewImage" data-url="{{imgList[index]}}">
				<image name="picture" src='{{imgList[index]}}' mode='aspectFill'></image>
				<view class="cu-tag bg-red" catchtap="DelImg" data-index="{{index}}">
					<text class="cuIcon-close"></text>
				</view>
			</view>
			<view class="solids" bindtap="ChooseImage" wx:if="{{imgList.length<4}}">
				<text class="cuIcon-cameraadd"></text>
			</view>
		</view>
	</view>

	<view class="padding">
		<button class="cu-btn block bg-blue margin-tb-sm lg" form-type="submit">提交</button>
	</view>
</form>

	
